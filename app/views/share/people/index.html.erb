<h1>Listing people</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Telephone</th>
    <th>Zip code</th>
    <th>Address</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.name %></td>
    <td><%= person.email %></td>
    <td><%= person.telephone %></td>
    <td><%= person.zip_code %></td>
    <td><%= person.address %></td>
    <td><%= person.customer.nil? ? link_to('AddCustomer', customers_path("supplier[person_id]" => person.id), :method=>:post) : link_to('Customer', customer_path(:id => person.customer.id)) %></td>
    <td><%= person.supplier.nil? ? link_to('AddSupplier', suppliers_path("supplier[person_id]" => person.id), :method=>:post) : link_to('Supplier', supplier_path(:id => person.supplier.id)) %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

